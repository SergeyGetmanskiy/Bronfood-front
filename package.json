        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.54.2",
        "react-i18next": "^15.4.0",
        "react-input-mask": "^2.0.4",
        "react-input-pin-code": "^1.2.1",
